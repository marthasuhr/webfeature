---
const { img } = Astro.props;
---

<section>

<div class="nyt_emne">
     <h2 class="overskrift"><slot /> </h2> 
 <img class="baggrundsbillede" src={img} alt="Baggrundsbillede">
</div>



</section>

<style>
.nyt_emne {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
  }

  .overskrift {
    grid-column: 2/5;
    grid-row: 2/3;
    z-index: 10;
  }

  .baggrundsbillede {
    grid-column: 1/6;
    grid-row: 1/4;
  }

  h2 {
    color: white;
    text-shadow: 5px 5px rgb(0, 0, 0);
  }

</style>