---
const {img} = Astro.props
---

<section class="liste">
    <img class="pic" src={img} alt="lomo">
 <div class="liste_facts">
<slot /> 
</div>
</section>

<style>
@import "https://unpkg.com/open-props";
.liste {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    gap: 10px;
  }

  .liste_facts {
    grid-column: 3/7;
    grid-row: 2/3;
    z-index: 10;
color: white;
  }

  .pic {
    grid-column: 1/9;
    grid-row: 1/4;
    padding-bottom: 10rem;
}


@media (min-width: 900px) {
h5 {
    font-size: var(--font-size-7);
} 

}

</style>

 <script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

   gsap.from(".liste_facts", {
   repeat: -1,
  yoyo: true,
  x: 1,
  duration: 0.2,
  ease: "power1.inOut",

    },
  )


  </script> 
