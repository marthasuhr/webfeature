---
const { img } = Astro.props;
---

<section>

<div class="pierres_b">
     <h1 class="pierres_b_h2"><slot /> </h1> 
 <img class="pierres_b_img" src={img} alt="HÃ¦nder der holder sammen">
</div>

</section>


<style>
@import "https://unpkg.com/open-props";

.pierres_b {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
  }

  .pierres_b_h2 {
    grid-column: 2/5;
    grid-row: 2/3;
    z-index: 10;
  }

  .pierres_b_img {
    grid-column: 1/6;
    grid-row: 1/4;
	-webkit-animation: blink-1 0.5s ease-in both;
	        animation: blink-1 0.5s ease-in both;
}

  @-webkit-keyframes blink-1 {
  0%,
  50%,
  100% {
    opacity: 1;
  }
  25%,
  75% {
    opacity: 0;
  }
}
@keyframes blink-1 {
  0%,
  50%,
  100% {
    opacity: 1;
  }
  25%,
  75% {
    opacity: 0;
  }
}
    /* background-image: url('img/pierre.webp'); */


    .scale-in-center {
	-webkit-animation: scale-in-center 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
	        animation: scale-in-center 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
}

@-webkit-keyframes scale-in-center {
  0% {
    -webkit-transform: scale(0);
            transform: scale(0);
    opacity: 1;
  }
  100% {
    -webkit-transform: scale(1);
            transform: scale(1);
    opacity: 1;
  }
}
@keyframes scale-in-center {
  0% {
    -webkit-transform: scale(0);
            transform: scale(0);
    opacity: 1;
  }
  100% {
    -webkit-transform: scale(1);
            transform: scale(1);
    opacity: 1;
  }
}


</style>

<script>
import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

   
  gsap.to(".pierre_b_h2", {
    scrollTrigger: {
      trigger: ".pierres_b",
      start: "start",
      toggleClass: "scale-in-center",
  
    },
  })

  

  


</script>