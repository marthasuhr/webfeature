<style>
@import "https://unpkg.com/open-props";

.pierres_b {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
  }

  .pierres_b_h2 {
    grid-column: 2/5;
    grid-row: 2/3;
    z-index: 10;
  }

  .pierres_b_img {
    grid-column: 1/6;
    grid-row: 1/4;
	-webkit-animation: blink-1 0.5s ease-in both;
	        animation: blink-1 0.5s ease-in both;
}

  @-webkit-keyframes blink-1 {
  0%,
  50%,
  100% {
    opacity: 1;
  }
  25%,
  75% {
    opacity: 0;
  }
}
@keyframes blink-1 {
  0%,
  50%,
  100% {
    opacity: 1;
  }
  25%,
  75% {
    opacity: 0;
  }
}
