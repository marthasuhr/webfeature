---
import Citat from "./Citat.astro";
const { img } = Astro.props;
---

<section>

<div class="historie">
 <img class="baggrundsbillede_vertical" src={img} alt="Baggrundsbillede">
   <p class="tekst_overbillede"><slot /> </p> 
</div>



</section>

<style>
.historie {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
  }

  .baggrundsbillede_vertical {
    grid-column: 1/6;
    grid-row: 1/4;
  }

  .tekst_overbillede {
    grid-column: 2/5;
    grid-row: 2/3;
    z-index: 10;
  }

  </style>